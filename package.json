{
  "name": "quiz-app",
  "version": "0.0.1",
  "description": "A generic quiz application for learning new things",
  "main": "server.js",
  "author": "philjung94",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "express": "^4.17.1",
    "express-handlebars": "^5.1.0",
    "method-override": "^3.0.0",
    "mongodb": "^3.6.2"
  },
  "scripts": {
    "build": "rm -rf build && mkdir build && cp -r src/views build && tsc",
